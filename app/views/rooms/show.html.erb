<h1>Room <%= @room.roomnum %></h1><br>

<h2>Features:</h2>
<ul>
	<li><%= @room.bedrooms %> bedroom(s)</li>
	<li><%= @room.bathrooms %> bathroom(s)</li>
	<li><%= @room.size %> sq.ft</li>
	<li>Capacity: <%= @room.capacity %></li>
	<li>$<%= @room.cost %>/night</li>
</ul>

<h2>Guests</h2>
<% if @room.guests != [] %>
	<ul>
		<% @room.guests.each do |guest| %>
		<li><%= link_to guest.name, guest_path(guest) %></li>
		<% end %>
	</ul>
<% else %>
	<p>There are currently no guests in this room.</p>
<% end %>
